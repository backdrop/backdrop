  $signers['hash'] = array(
    'title' => t('Hash'),
    'sign callback' => 'codesign_hash_sign',
    'verify callback' => 'codesign_hash_verify',
    'status callback' => 'codesign_hash_status',
    'public keychain callback' => 'codesign_hash_get_public_keychain',
    'private keychain callback' => 'codesign_hash_get_private_keychain',
    'file' => backdrop_get_path('module', 'codesign_hash') . '/hash.codesign.inc',
  );

  return $signers;
}

