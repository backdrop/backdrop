<?php
/**
 * @file
 * Administrative page for contextual links.
 */

/**
 * Returns settings form for contextual links.
 *
 * All elements on the form are generated by client modules via
 * hook_form_FORM_ID_alter(). Client modules add their own validation and/or
 * submission functions and should store values in their own config files.
 *
 * @see layout_form_contextual_settings_form_alter()
 * @see layout_contextual_settings_form_submit()
 * @see layout_init()
 * @see layout_preprocess_layout()
 */
function contextual_settings_form($form, &$form_state) {

  $form['actions'] = array(
    '#type' => 'actions',
  );
  $form['actions']['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Save configuration'),
  );

  $form['#submit'] = array('contextual_settings_form_submit');
  return $form;
}

/**
 * Submission function for contextual links.
 */
function contextual_settings_form_submit($form, &$form_state) {
  backdrop_set_message(t('The configuration options have been saved.'));
}
