/**
 * Implements hook_field_schema().
 */
function color_field_field_schema($field) {
  $columns = array(
    'value' => array(
      'type' => 'varchar',
      'length' => 7,
      'not null' => FALSE,
    ),
  );
  return array(
    'columns' => $columns,
  );
}
