/**
 * Test node type customizations persistence.
 */
class NodeTypePersistenceTestCase extends DrupalWebTestCase {
  /**
   * Tests that node type customizations persist through disable and uninstall.
   */
  function testNodeTypeCustomizationPersistence() {
    $web_user = $this->drupalCreateUser(array('bypass node access', 'administer content types', 'administer modules'));
    $this->drupalLogin($web_user);

    // Enable the test module and verify that the test node type is in the DB
    // and is not disabled.
    module_enable(array('node_test'), FALSE);
    node_types_rebuild();
    $disabled = db_query('SELECT disabled FROM {node_type} WHERE type = :type', array(':type' => 'test'))->fetchField();
    $this->assertNotIdentical($disabled, FALSE, t('Test node type found in the database'));
    $this->assertEqual($disabled, 0, t('Test node type is not disabled'));

    // Check that test node type (uncustomized) shows up.
    $this->drupalGet('node/add');
    $this->assertText('test', t('Test type is found on node/add'));

    // Customize book description.
    $description = $this->randomName();
    $edit = array('description' => $description);
    $this->drupalPost('admin/structure/types/manage/test', $edit, t('Save content type'));

    // Check that Test node type customization shows up.
    $this->drupalGet('node/add');
    $this->assertText($description, t('Customized description found'));

    // Disable test node module and check that the node type gets disabled.
    module_disable(array('node_test'), FALSE);
    node_types_rebuild();
    $disabled = db_query('SELECT disabled FROM {node_type} WHERE type = :type', array(':type' => 'test'))->fetchField();
    $this->assertEqual($disabled, 1, t('Test node type is disabled'));
    $this->drupalGet('node/add');
    $this->assertNoText('book', t('Test node type is not found on node/add'));

    // Reenable the test node module and check that the customization survived
    // the module disable.
    module_enable(array('node_test'), FALSE);
    node_types_rebuild();
    $disabled = db_query('SELECT disabled FROM {node_type} WHERE type = :type', array(':type' => 'test'))->fetchField();
    $this->assertEqual($disabled, 0, t('Test node type is not disabled'));
    $this->drupalGet('node/add');
    $this->assertText($description, t('Customized description found'));

    // Disable and uninstall book.
    module_disable(array('node_test'), FALSE);
    node_types_rebuild();
    $result = drupal_uninstall_modules(array('node_test'));
    $disabled = db_query('SELECT disabled FROM {node_type} WHERE type = :type', array(':type' => 'test'))->fetchField();
    $this->assertTrue($disabled, t('Test node type is in the database and is disabled'));
    $this->drupalGet('node/add');
    $this->assertNoText('test', t('Test type is no longer found on node/add'));

    // Reenable the test node module and check that the customization survived
    // the module uninstall.
    module_enable(array('node_test'), FALSE);
    node_types_rebuild();
    $this->drupalGet('node/add');
    $this->assertText($description, t('Customized description is found even after uninstall and reenable.'));
  }
}

