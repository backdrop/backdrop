<?php
/**
 * @file
 * Install, update and uninstall functions for the requirements_alterable_test
 * module.
 */

/**
 * Implements hook_requirements().
 */
function requirements_alterable_test_requirements($phase) {
  $requirements = array();

  $requirements['requirements_test_alterable'] = array(
    'title' => t('Requirements Test Alterable'),
    'severity' => REQUIREMENT_ERROR,
    'description' => t('A requirement that will be altered.'),
  );

  $requirements['requirements_test_deletable'] = array(
    'title' => t('Requirements Test Deletable'),
    'severity' => REQUIREMENT_INFO,
    'description' => t('A requirement that will be deleted.'),
  );

  return $requirements;
}
