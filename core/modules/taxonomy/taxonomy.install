 */
function taxonomy_update_dependencies() {
  // Do not allow user module to convert user roles to configuration until after
  // we have renamed our permissions in taxonomy_update_1001().
  $dependencies['user'][1007] = array(
    'taxonomy' => 1001,
  );

  return $dependencies;
}

