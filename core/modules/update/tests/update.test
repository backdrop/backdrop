        'version' => '1.0',
      ),
      'update_test_admintheme' => array(
        'project' => 'update_test_admintheme',
        'version' => '1.x-1.0',
        'hidden' => FALSE,
      ),
      'update_test_basetheme' => array(
        'project' => 'update_test_basetheme',
